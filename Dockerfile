FROM maven:3.9-eclipse-temurin-21

WORKDIR /app

COPY pom.xml .
RUN mvn dependency:go-offline -B

RUN mkdir -p \
    /app/logs/framework \
    /app/logs/debug \
    /app/logs/info \
    /app/logs/error \
    /app/logs/perf \
    /app/logs/trace

EXPOSE 8080 5005

CMD ["mvn", "spring-boot:run", "-Dspring-boot.run.jvmArguments=-agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=*:5005"]